{
    "name": "Codecolor.js",
    "version": "1.0.0",
    "description": "CodeColor is just a syntax highlighter writen in JavaScript.",
    "license": "MIT",
    "author": "Daniil Ryazanov <opensource@tagproject.ru>",
    "keywords": [
        "highlight",
        "syntax"
    ],
    "url": "https://codecolorjs.pw/",
    "homepage": "https://codecolorjs.pw/",
    "main": "dist/codecolor.js",
    "unpkg": "dist/codecolor.min.js",
    "jsdelivr": "dist/codecolor.min.js",
    "browser": "dist/codecolor.js",
    "module": "dist/codecolor.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/keindev/codecolor.js.git"
    },
    "bugs": {
        "url": "https://github.com/keindev/codecolor.js/issues"
    },
    "scripts": {
        "clean": "rm -rf ./dist",
        "lint:js": "flow check && eslint ./src",
        "lint:test": "eslint ./test",
        "lint:bench": "eslint ./bench",
        "lint:scss": "sass-lint -v -q",
        "test": "jest",
        "prebuild:flow-typed": "flow-typed install jest --ignoreDeps",
        "build:js:transpile": "cross-env NODE_ENV=transpile rollup -c",
        "build:js:transpile-legacy": "cross-env NODE_ENV=transpile-legacy rollup -c",
        "build:js:minify": "cross-env NODE_ENV=minify babel ./dist/codecolor.js -o ./dist/codecolor.min.js",
        "build:js:minify-legacy": "cross-env NODE_ENV=minify babel ./dist/codecolor.legacy.js -o ./dist/codecolor.legacy.min.js",
        "build:js": "npm-run-all build:js:* && node build/banner.js",
        "build:scss": "node-sass --output-style compressed --linefeed lf ./src/styles/themes/ -o ./dist/themes",
        "build:json": "mkdir -p ./dist/languages && cp -t ./dist/languages ./src/languages/*.json",
        "build:prettier": "prettier --write ./dist/{codecolor,codecolor.legacy}.js",
        "zip": "cp -t ./dist ./LICENSE ./README.md ./CHANGELOG.md && cd ./dist && zip codecolor.js.zip -- ./themes/*.css ./languages/*.json ./*.js ./LICENSE ./README.md ./CHANGELOG.md",
        "build": "npm-run-all clean prebuild:* lint:* test build:* zip",
        "bench": "node bench/highlight.bench.js"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-flow": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "babel-eslint": "10.0.1",
        "babel-jest": "^24.8.0",
        "babel-preset-minify": "^0.5.0",
        "benchmark": "^2.1.4",
        "colors": "^1.3.3",
        "cross-env": "^5.2.0",
        "eslint": "^5.12.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-flowtype": "^3.2.1",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-jest": "^22.6.4",
        "flow-bin": "^0.91.0",
        "highlight.js": "^9.13.1",
        "jest": "^24.1.0",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "prettier": "1.16.1",
        "prismjs": "^1.15.0",
        "regenerator-runtime": "^0.13.2",
        "rollup": "^1.1.2",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-json": "^3.1.0",
        "sass-lint": "^1.12.1"
    }
}
